{
  "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "noImplicitAny": true,
      "removeComments": true,
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "paths": {
        "logging-lib": ["../logging-lib"],
      },
  },
  "include": ["src/**/*", "config/firebase.ts"],
  "exclude": ["node_modules"]
}