{
    "compilerOptions": {
        "typeRoots": ["./node_modules/@types", "./express.d.ts"],
        "module" : "CommonJS",
        "target": "ES2020",
        "noImplicitAny": true,
        "removeComments": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "paths" : {
            "#/*": ["./src/*"]
        },
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
    },
    "include": ["src/**/*.ts", "express.d.ts"],
}